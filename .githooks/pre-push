#!/bin/bash

# Pre-push hook to run CI checks locally before pushing
# This prevents CI failures by catching issues early

set -e

echo "ğŸ” Running pre-push checks..."

# Check if we're in the project root
if [ ! -f "package.json" ] || [ ! -d "packages" ]; then
    echo "âŒ Not in project root directory"
    exit 1
fi

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "ğŸ¦€ Checking Rust formatting..."
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

cd packages/validation-service

# Check Rust formatting
if ! cargo fmt --check 2>/dev/null; then
    echo -e "${RED}âŒ Rust formatting issues found!${NC}"
    echo -e "${YELLOW}â†’ Run 'cargo fmt' to fix${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Rust formatting OK${NC}"

# Run clippy
echo ""
echo "ğŸ” Running Rust clippy..."
if ! cargo clippy -- -D warnings 2>/dev/null; then
    echo -e "${RED}âŒ Clippy warnings found!${NC}"
    echo -e "${YELLOW}â†’ Fix the warnings before pushing${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Clippy checks passed${NC}"

# Quick Rust build check (not full build, just check)
echo ""
echo "ğŸ”¨ Checking Rust compilation..."
if ! cargo check --quiet 2>/dev/null; then
    echo -e "${RED}âŒ Rust compilation failed!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… Rust compilation OK${NC}"

cd ../..

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo "ğŸ“¦ Checking TypeScript/React..."
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

cd packages/pwa-client

# TypeScript type checking
echo "ğŸ” Running TypeScript checks..."
if ! npm run type-check 2>/dev/null; then
    echo -e "${RED}âŒ TypeScript errors found!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… TypeScript checks passed${NC}"

# ESLint
echo ""
echo "ğŸ” Running ESLint..."
if ! npm run lint 2>/dev/null; then
    echo -e "${RED}âŒ ESLint errors found!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… ESLint checks passed${NC}"

# Run tests
echo ""
echo "ğŸ§ª Running tests..."
if ! npm test 2>/dev/null; then
    echo -e "${RED}âŒ Tests failed!${NC}"
    exit 1
fi
echo -e "${GREEN}âœ… All tests passed${NC}"

cd ../..

echo ""
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
echo ""