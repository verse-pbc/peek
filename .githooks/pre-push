#!/bin/bash

# Pre-push hook to run CI checks locally before pushing
# This prevents CI failures by catching issues early

set -e

echo "🔍 Running pre-push checks..."

# Check if we're in the project root
if [ ! -f "package.json" ] || [ ! -d "packages" ]; then
    echo "❌ Not in project root directory"
    exit 1
fi

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "🦀 Checking Rust formatting..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"

cd packages/validation-service

# Check Rust formatting
if ! cargo fmt --check 2>/dev/null; then
    echo -e "${RED}❌ Rust formatting issues found!${NC}"
    echo -e "${YELLOW}→ Run 'cargo fmt' to fix${NC}"
    exit 1
fi
echo -e "${GREEN}✅ Rust formatting OK${NC}"

# Run clippy
echo ""
echo "🔍 Running Rust clippy..."
if ! cargo clippy -- -D warnings 2>/dev/null; then
    echo -e "${RED}❌ Clippy warnings found!${NC}"
    echo -e "${YELLOW}→ Fix the warnings before pushing${NC}"
    exit 1
fi
echo -e "${GREEN}✅ Clippy checks passed${NC}"

# Quick Rust build check (not full build, just check)
echo ""
echo "🔨 Checking Rust compilation..."
if ! cargo check --quiet 2>/dev/null; then
    echo -e "${RED}❌ Rust compilation failed!${NC}"
    exit 1
fi
echo -e "${GREEN}✅ Rust compilation OK${NC}"

cd ../..

echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo "📦 Checking TypeScript/React..."
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"

cd packages/pwa-client

# TypeScript type checking
echo "🔍 Running TypeScript checks..."
if ! npm run type-check 2>/dev/null; then
    echo -e "${RED}❌ TypeScript errors found!${NC}"
    exit 1
fi
echo -e "${GREEN}✅ TypeScript checks passed${NC}"

# ESLint
echo ""
echo "🔍 Running ESLint..."
if ! npm run lint 2>/dev/null; then
    echo -e "${RED}❌ ESLint errors found!${NC}"
    exit 1
fi
echo -e "${GREEN}✅ ESLint checks passed${NC}"

# Run tests
echo ""
echo "🧪 Running tests..."
if ! npm test 2>/dev/null; then
    echo -e "${RED}❌ Tests failed!${NC}"
    exit 1
fi
echo -e "${GREEN}✅ All tests passed${NC}"

cd ../..

echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo -e "${GREEN}✅ All pre-push checks passed!${NC}"
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
echo ""